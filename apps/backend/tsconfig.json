{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
        "module": "NodeNext",            // or "ESNext" (with limitations)
    "moduleResolution": "bundler", // for proper ESM behavior
    "target": "ES2020",              // or higher
    "esModuleInterop": true,        // important for Fastify
    "outDir": "dist",
    "strict": true,
    "noEmit": true
  },
  "include": ["src"]
}
