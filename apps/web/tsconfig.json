{
    "extends": "@repo/typescript-config/nextjs.json",
    "compilerOptions": {
        "strict": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "baseUrl": ".",
        "paths": {
            "@components/*": ["components/*"],
            "@lib/*": ["lib/*"],
            "@utils/*": ["utils/*"]
        }
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "next-env.d.ts",
        "next.config.js",
        ".next/types/**/*.ts"
    ],
    "exclude": ["node_modules"]
}
